<?xml version='1.0' encoding="iso-8859-1"?>
<stylesheet xmlns="http://www.w3.org/1999/XSL/Transform" version='1.0'>
    <param name="xetex.font">
        <text>\setmainfont{Lato}</text>
        <text>\setsansfont{Montserrat}</text>
        <text>\setmonofont[Scale=0.95]{Roboto Mono}</text>
    </param>
    <param name="latex.class.options">9pt</param>
    <param name="paper.type">b5paper</param>
    <!-- Don't include the revision history block -->
    <param name="latex.output.revhistory">0</param>
    <!-- Don't show the 'collaborators' section -->
    <param name="doc.collab.show">0</param>

    <param name="latex.babel.language">slovak</param>

    <!-- Adjust the page margins -->
    <param name="page.margin.inner">2.5cm</param>
    <param name="page.margin.outer">3cm</param>
    <param name="page.margin.top">3cm</param>
    <param name="page.margin.bottom">4.5mm</param>
</stylesheet>
